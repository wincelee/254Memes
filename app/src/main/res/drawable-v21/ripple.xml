<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorWhite">
    <item>
        <shape android:shape="rectangle">

            <stroke
                android:width="1dp"
                android:color="@color/colorBrownShade50"/>

            <solid android:color="@color/colorBlackShade50" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:bottom="1dp"
                android:top="1dp" />

            <corners android:radius="10dp" />

        </shape>
    </item>
</ripple>